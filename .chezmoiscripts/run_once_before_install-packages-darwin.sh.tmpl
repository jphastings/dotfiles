{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash

# Homebrew
brew bundle --no-upgrade --no-lock --file=/dev/stdin <<EOF
# Apps
cask "1password"
cask "1password-cli"
cask "raycast"
cask "docker"
cask "imageoptim"
cask "insomnia"
cask "iterm2"
cask "plexamp"
cask "spotify"
cask "sublime-text"
cask "the-unarchiver"
{{- if .is_deliveroo }}
cask "charles"
cask "force-paste"
cask "goland"
cask "rubymine"
{{- end }}
{{- if .is_personal }}
cask "nordvpn"
cask "plex-media-player"
{{- end }}


# Terminal
brew "go"
brew "gpg"
brew "jq"
brew "mas"
brew "netcat"
brew "node"
brew "pinentry-mac"
brew "rbenv"
brew "ruby"
brew "yarn"
brew "zsh"
{{- if .is_deliveroo }}
brew "aws/tap/aws-sam-cli"
brew "redis"
brew "s3cmd"
{{- end }}

# Taps
tap "puma/puma"
brew "puma/puma/puma-dev"
{{- if .is_deliveroo }}
tap "deliveroo/tools"
brew "deliveroo/tools/roo"
brew "deliveroo/tools/roo-clone"
brew "deliveroo/tools/roo-florence"
brew "deliveroo/tools/roo-go"
brew "deliveroo/tools/roo-project"
brew "deliveroo/tools/roo-tool"
tap "phrase/brewed"
brew "phrase/brewed/phraseapp"
{{- end }}

# Mac App Store
mas "AntiRSI", id: 442007571
mas "Discovery", id: 1381004916
mas "The Archive Browser", id: 510232205
mas "Gapplin", id: 768053424
mas "Netmo", id: 1192219511
{{- if .is_personal }}
mas "Day One", id: 1055511498
{{- end }}
EOF


# 1Password
{{- if .is_deliveroo }}
op account add --email jp@deliveroo.co.uk --address deliveroo.1password.com --shorthand deliveroo
eval $(op signin --account deliveroo.1password.com)
{{- end }}
{{- if .is_personal }}
op account add --email jphastings@gmail.com --address my.1password.com --shorthand my
eval $(op signin --account my.1password.com)
{{- end }}
{{- end }}
